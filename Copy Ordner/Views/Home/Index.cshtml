
@{
    ViewBag.Title = "E-Mensa";
}

<div>
    <div class="row">
        <div class="card" style="width: 70rem; align-content:inherit">
            <img class="card-img-top" src="~/Pics/buffet.jpg" alt="Buffet">

        </div>
        <div class="row">
            <div class="col-2">
                <p class="bottom-margin"> Der Dienst <b>e-Mensa</b> ist noch beta. Sie können bereits <a href="#"><u>Mahlzeiten</u></a> durchstöbern, aber noch nicht bestellen.</p>
            </div>
            <div class="col-8">
                <h2>Leckere Gerichte vorbestellen</h2>
                <p>... und gemeinsam mit Kommilitonen und Freunden essen</p>
            </div>
            <div class="col-2 align-content-center">
                @if (Session["name"] == null)
                {<form method="get" action="/Login/Registrierung">
                        <button type="submit" class="bottom-margin"><i class="far fa-hand-point-right"></i>Registrieren</button>
                   </form>
                 <form  method="get" action="/Login/Index">
                     <button type="submit" class="left-margin"><i class="fas fa-sign-in-alt"></i>Anmelden</button>
                 </form>
                 }
                </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p> Registrieren Sie sich <a href="#"><u>hier</u></a>, um über die Veröffentlichung des Dienstes per Mail informiert zu werden.</p>
            </div>
            <div class="col-10">

                <div class="card" style="width: 46rem; align-content:center">
                    <img class="card-img-top" src="~/Pics/aachen.png" alt="Mensa der FH Aachen">
                </div>
            </div>
        </div>
    </div>
</div>